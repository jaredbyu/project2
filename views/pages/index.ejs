    </div>
 

    <script>
        var getTweets = true;
        
                
    function getPaperTweets() {
        
        
    $.post("/searchTweets", function(message) {
        if(getTweets)
        if (message) {
            $("#paperMessages").append("<li><span style=\"font-weight: bold\">User: " + message.user + "</span>- " + message.tweets + "</li><br>");
            
        }
    })
    
}
       function changeT(){ 
           getTweets = true;
           document.getElementById("twitterStatus").innerHTML = "Twitter Flow Currently: Active";
       }
        
       function changeF(){
           getTweets = false;
           document.getElementById("twitterStatus").innerHTML = "Twitter Flow Currently: Inactive";
       }
        
       
window.setInterval(function(){
  getPaperTweets();
    
   
}, 4000);
     
    </script>
    
    
